<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.swifiic.app.photoapp.andi.SettingsActivity" >

    <TextView
        android:id="@+id/rem_pts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Points"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/pts_photo_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_rem_pts_photo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pts_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 points" />

    <TextView
        android:id="@+id/pts_upvote_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/settings_rem_pts_upvote"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pts_upvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 points" />

</LinearLayout>